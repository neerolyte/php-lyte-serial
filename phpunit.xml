<phpunit colors="true" backupGlobals="false" verbose="true">
	<testsuites>
		<testsuite name="SafeUnserialize">
			<directory suffix=".php">tests</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist processUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">./inc</directory>
		</whitelist>
	</filter>
</phpunit>
